{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "tsx",
            "args": [
                "${workspaceFolder}/app.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Launch new",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "tsx",
            "args": [
                "${workspaceFolder}/app.ts"
            ],
            "runtimeArgs": [],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
        }
    ]
}